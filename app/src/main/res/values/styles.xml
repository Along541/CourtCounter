<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#000000</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#000000</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

    </style>
    <!-- res/values/themes.xml -->
    <style name="RedButtonLightTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

</resources>